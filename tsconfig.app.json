{
  "compilerOptions": {
    // Configuration de base TypeScript
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    
    // Compatibilité avec Vite
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,  // Ajout recommandé
    "allowSyntheticDefaultImports": true,  // Utile pour certaines librairies
    "isolatedModules": true,
    "moduleDetection": "force",
    
    // Sortie
    "noEmit": true,
    "jsx": "react-jsx",
    
    // Vérifications strictes
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // Chemins (ajustez selon votre structure)
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    
    // Support des fonctionnalités modernes
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]  // Exclusion recommandée
}